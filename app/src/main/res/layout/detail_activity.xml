<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_gravity="center|center_horizontal"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:alpha="0.9">

        <ImageButton
            android:layout_width="@dimen/btm_btn_size"
            android:layout_height="@dimen/btm_btn_size"
            android:scaleType="fitCenter"
            android:id="@+id/editBtn"
            android:src="@drawable/edit_w"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/btn_margin_size"/>

        <ImageButton
            android:layout_width="@dimen/btm_btn_size"
            android:layout_height="@dimen/btm_btn_size"
            android:scaleType="fitCenter"
            android:id="@+id/delBtn"
            android:src="@drawable/delete_w"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/btn_margin_size"/>

        <ImageButton
            android:layout_width="@dimen/btm_btn_size"
            android:layout_height="@dimen/btm_btn_size"
            android:scaleType="fitCenter"
            android:id="@+id/shareBtn"
            android:src="@drawable/share_w"
            android:background="@android:color/transparent"
            android:layout_marginRight="@dimen/btn_margin_size"/>

        <ImageButton
            android:layout_width="@dimen/btm_btn_size"
            android:layout_height="@dimen/btm_btn_size"
            android:scaleType="fitCenter"
            android:id="@+id/productBtn"
            android:src="@drawable/custom_w"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</FrameLayout>